# i3status configuration file.
general {
    output_format = "i3bar"
    colors = true
    interval = 5

    color_good = "#B2A191"
    color_bad = "#586E75"
    color_degraded = "#DC322F"
}

order += "read_file ~/.config/weather"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "disk /home/"
order += "disk /data/"
order += "disk /nas/"
order += "disk /var/"
order += "disk /mnt/"
order += "memory"
order += "cpu_usage"
