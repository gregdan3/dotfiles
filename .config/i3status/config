# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = false
    interval = 5
    color_good = "#E8DFD6"
    color_bad = "#586E75"
    color_degraded = "#DC322F"
}

order += "cpu_usage"
# order += "cpu_temperature _first_"
order += "cpu_temperature all"
order += "memory"
# order += "load"
order += "disk /"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
    format = " 🖥 %usage "
    # format = " cpu %usage "
}

cpu_temperature _first_ {
    format = " 🌡 %degrees°C "
    # format = " %degrees°C "
    max_threshold = 70
    # format_above_threshold = " %degrees°C "
    format_above_threshold = " ♨ %degrees°C "
    # format_above_threshold = " 🤒  %degrees°C "
    # path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

cpu_temperature all {
    format = " 🌡 %degrees°C "
    # format = " %degrees°C "
    max_threshold = 70
    # format_above_threshold = " %degrees°C "
    format_above_threshold = " ♨ %degrees°C "
    # format_above_threshold = " 🤒  %degrees°C "
    # path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

load {
    format = " %1min %5min %15min "
    # max_threshold = 0.3
}

disk "/" {
    # format = " m.2 %used / %total "
    format = " 🖴 %used / %total "
    # format = " ⛁ %used / %total "
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = " %essid: %ip "
    format_down = ""
    # no bitrate available for no reason
}

wireless _first_ {
    # format_up = " 📶 %essid: %bitrate %ip "
    format_up = " %essid: %bitrate %ip "
    format_down = ""
}

memory {
    format = " 🖫 %used / %total "
    # format = " %free %available (%used) / %total "
    threshold_degraded = "15%"
    format_degraded = " %used / %total "
}

battery all {
    # format = "%status %percentage %remaining %emptytime"
    format = " %status%percentage "
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    # status_chr = ""
    status_chr = "⚡"
    # status_bat = "☉"
    status_bat = "🔋"
    status_unk = "???"
    # status_unk = "☉"
    status_full = "☻"
    low_threshold = 10
    threshold_type = percentage
}
tztime local {
    # format = "%Y-%m-%d %H:%M:%S"
    # format = " %m/%d ⏲ %H:%M "
    format = " %m/%d %H:%M "
}
