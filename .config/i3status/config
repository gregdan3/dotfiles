# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = false
    interval = 5

    color_good = "#E8DFD6"
    color_bad = "#586E75"
    color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "cpu_temperature all"
order += "memory"
# order += "load"
order += "disk /"
order += "disk /home/"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
    format = " 🖥 %usage "

    # format = " cpu %usage "
}

cpu_temperature all {
    max_threshold = 70

    # path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"

    format = " 🌡 %degrees°C "
    format_above_threshold = " ♨ %degrees°C "

    # format = " %degrees°C "
    # format_above_threshold = " %degrees°C "
    # format_above_threshold = " 🤒  %degrees°C "
}

load {
    max_threshold = 0.3

    format = " %1min %5min %15min "
}

disk "/" {
    format = " / 🖴 %used / %total "

    # format = " m.2 %used / %total "
    # format = " ⛁ %used / %total "

}

disk "/home/" {
    format = " ⌂ 🖴 %used / %total "

    # format = " m.2 %used / %total "
    # format = " ⛁ %used / %total "
}

ethernet _first_ {
    format_down = ""

    format_up = " %essid: %ip "
}

wireless _first_ {
    format_down = ""

    format_up = " %essid: %bitrate %ip "

    # format_up = " 📶 %essid: %bitrate %ip "
}

memory {
    threshold_degraded = "15%"

    format = " 🖫 %used / %total "
    format_degraded = " %free %available (%used) / %total "

    # format = " %free %available (%used) / %total "
    # format_degraded = " %free %available (%used) / %total "
}

battery all {
    last_full_capacity = true
    integer_battery_capacity = true
    threshold_type = percentage
    low_threshold = 10
    format_down = ""

    format = " %status%percentage "
    status_bat = "🔋"
    status_chr = "⚡"
    status_full = "☻"
    status_unk = "???"

    # format = "%status %percentage"
    # format = "%status %percentage %remaining %emptytime"
    # status_chr = ""
    # status_bat = "☉"
    # status_unk = "☉"
}

tztime local {
    format = " %m/%d %H:%M "

    # format = "%Y-%m-%d %H:%M:%S"
    # format = " %m/%d ⏲ %H:%M "
}
