# i3status configuration file.
general {
    output_format = "i3bar"
    colors = true
    interval = 5

    color_good = "#B2A191"
    color_bad = "#586E75"
    color_degraded = "#DC322F"
}

order += "read_file ~/.config/weather"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "disk /home/"
order += "disk /data/"
order += "disk /nas/"
order += "disk /var/"
order += "disk /mnt/"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature all"
order += "volume master"
order += "battery all"
order += "tztime local"


read_file ~/.config/weather {
    format = "%content"
    path = "~/.config/weather"
}

ethernet _first_ {
    format_down = ""
    format_up = "🖧 %ip: %speed"
}
wireless _first_ {
    format_down = ""
    format_up = "📶 %essid: %bitrate %ip"
}

disk "/" {
    prefix_type = "decimal"
    format = "/ %avail"
    # format = "/ %used / %total"
    format_not_mounted = ""
    low_threshold = 5
    threshold_type = "percentage_free"
}
disk "/home/" {
    prefix_type = "decimal"
    format = "⌂ %avail"
    # format = "⌂ %used / %total"
    format_not_mounted = ""
    low_threshold = 5
    threshold_type = "percentage_free"
}
disk "/data/" {
    prefix_type = "decimal"
    format = "⛁ %avail"
    # format = "⛁ %used / %total"
    format_not_mounted = ""
    low_threshold = 5
    threshold_type = "percentage_free"
}
disk "/nas/" {
    prefix_type = "decimal"
    format = "🖴 %avail"
    # format = "🖴 %used / %total"
    format_not_mounted = ""
    low_threshold = 5
    threshold_type = "percentage_free"
}
disk "/var/" {
    prefix_type = "decimal"
    format = "var %avail"
    # format = "var %used / %total"
    format_not_mounted = ""
    low_threshold = 5
    threshold_type = "percentage_free"
}
disk "/mnt/" {
    prefix_type = "decimal"
    format = "mnt %avail"
    # format = "mnt %used / %total"
    format_not_mounted = ""
    low_threshold = 5
    threshold_type = "percentage_free"
}

memory {
    threshold_degraded = "15%"
    format = " %available"
    # format = "🖫 %used / %total"
    format_degraded = "🖫 %free %available (%used) / %total"
}

cpu_usage {
    format = "🖥 %usage"
}
cpu_temperature all {
    max_threshold = 75
    # path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
    format = "🌡 %degrees°C"
    format_above_threshold = "♨ %degrees°C"
}

volume master {
    color_degraded = "#B2A191"
    color_bad = "#B2A191"
    format = "🔊 %volume"
    format_muted = "🔇 %volume"
}

battery all {
    last_full_capacity = true
    integer_battery_capacity = true
    threshold_type = percentage
    low_threshold = 10
    format_down = ""
    format = "%status%percentage"
    status_bat = "🔋"
    status_chr = "⚡"
    status_full = "☻"
    status_unk = "???"
}

tztime local {
    format = "📅%m/%d▕ 🕑%H:%M"
}
